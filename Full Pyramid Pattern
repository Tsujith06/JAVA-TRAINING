import java.util.*;
class Main {
    public static void main(String[] args) {
        int n=3,digit=1,space=n*2-1;
        for(int r=0;r<n;r++){
            for(int s=1;s<space;s++){
                System.out.print(" ");
            }
            for(int i=0;i<digit;i++){
                System.out.print("* ");
            }
            digit+=2;
            space-=2;
            System.out.println();
        }
    }
}
