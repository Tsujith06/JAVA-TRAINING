import java.util.*;
class Main {
    public static void main(String[] args) {
        int n=5,l=1,space=0;
        for(int i=1;i<n;i++){
            l+=2;
        }
        int d=l;
        for(int r=0;r<n;r++){
            
            for(int s=0;s<space;s++){
                System.out.print(" ");
            }
            for(int j=0;j<d;j++){
                System.out.print("* ");
            }
            space+=2;
            d=d-2;
            System.out.println();
        }
    }
}
