import java.util.*;
class Main {
    public static void main(String[] args) {
        int n=6,k=2;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=k;j++){
                System.out.printf("* ");
            }
            System.out.println();
            if(i%2==0)
            {
                k=k+2;
            }
            
        }
        
    }
}
